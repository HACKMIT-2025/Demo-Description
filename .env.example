# Environment Variables for Community Playground
# Copy this file to .env and fill in your actual values

# Backend API URL - All database operations go through secure backend
VITE_BACKEND_URL=http://localhost:8000

# For production, update to:
# VITE_BACKEND_URL=https://your-modal-workspace--hackmit25-backend.modal.run

# Application URLs
VITE_APP_URL=http://localhost:5173

# Community Playground Configuration
VITE_COMMUNITY_URL=http://localhost:5173/community.html
VITE_GAME_BASE_URL=https://game.ai-creator.com

# Upload Configuration
VITE_UPLOAD_MAX_SIZE=10485760  # 10MB
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_COMMENTS=true
VITE_ENABLE_COLLECTIONS=true

# Social Media Integration
VITE_TWITTER_HANDLE=ai_game_creator
VITE_DISCORD_INVITE=https://discord.gg/your-server

# Rate Limiting
VITE_API_RATE_LIMIT=100  # requests per minute per user

# Cloudinary or Image CDN (optional)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Redis for Caching (optional)
REDIS_URL=redis://localhost:6379

# Authentication (if implementing user accounts)
JWT_SECRET=your-super-secret-jwt-key-here
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GITHUB_CLIENT_ID=your-github-oauth-client-id